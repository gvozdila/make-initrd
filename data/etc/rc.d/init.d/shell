#!/bin/bash
### BEGIN INIT INFO
# Provides:            shell
# Required-Start:
# Should-Start:
# Required-Stop:
# Should-Stop:
# Default-Start:       3 4 5
# Default-Stop:
# Short-Description:   Runs emergency shell
# Description:         Runs emergency shell
### END INIT INFO

. /.initrd/initenv
. /etc/init.d/template

. initrd-sh-functions

export RDSHELL_FOREVER=1

start()
{
	action_shell "Starting shell" create_background_session shell rdshell
	/lib/initrd/rootdelay &
}

stop()
{
	action_shell "Stopping shell" destroy_session shell
	{
		local pid=
		read -r pid < /var/run/rootdelay.pid
		[ -z "$pid" ] ||
			kill "$pid"
	} >/dev/null 2>&1
}

switch "${1-}"
